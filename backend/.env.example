# AI-Scraper Backend Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME="AI-Scraper API"
DEBUG=true
SECRET_KEY="your-super-secret-key-change-in-production-minimum-32-characters"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL="sqlite:///./ai_scraper.db"
# For PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/ai_scraper"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# AI Services
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"
MAX_TOKENS=2000
TEMPERATURE=0.1

# Script Execution Settings
SCRIPT_TIMEOUT=300
MAX_SCRIPT_SIZE=10000
SCRAPER_OUTPUT_DIR="./outputs"
SCRIPTS_DIR="./generated_scripts"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="./logs/app.log"

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=".py,.txt,.json"

# CORS Settings (comma-separated list)
ALLOWED_HOSTS="localhost:3000,localhost:5173,*"

# CORS Origins for development (comma-separated list)
# CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000"